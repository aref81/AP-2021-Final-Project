<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.GameMenuControllers.MainMenu">
   <children>
      <ImageView fitHeight="640.0" fitWidth="360.0" layoutX="20.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Back_Ground.jpg" />
         </image>
      </ImageView>
      <VBox layoutX="20.0" layoutY="30.0" prefHeight="640.0" prefWidth="360.0" stylesheets="@MainMenu.css">
         <children>
            <VBox fx:id="vbox" prefHeight="540.0" prefWidth="360.0" />
            <HBox prefHeight="100.0" prefWidth="360.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#showProfile" prefHeight="100.0" prefWidth="90.0" styleClass="MenuButtons" />
                  <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#showMatches" prefHeight="100.0" prefWidth="90.0" styleClass="MenuButtons" />
                  <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#showGame" prefHeight="100.0" prefWidth="90.0" styleClass="MenuButtons" />
                  <Button layoutX="100.0" layoutY="10.0" mnemonicParsing="false" onAction="#showDeck" prefHeight="100.0" prefWidth="90.0" styleClass="MenuButtons" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
